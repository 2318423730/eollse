<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bszn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/info_bg"
        android:orientation="vertical">
        <!--c6d8f6-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            android:background="#1c5cf7">
            <TextView
                android:id="@+id/tv_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:drawableLeft="@drawable/home"
                android:textSize="@dimen/px_40"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="标题"
                android:layout_centerInParent="true"
                android:textSize="@dimen/px_80"/>

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:drawableLeft="@drawable/back"
                android:textSize="@dimen/px_40"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/px_40">

            <RadioGroup
                android:id="@+id/rg_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_wyfw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_shfw_wyfu"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="物业服务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_50"
                    android:layout_marginRight="@dimen/px_1"/>

                <RadioButton
                    android:id="@+id/rb_bmfw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_shfw_bmfw"
                    android:button="@null"
                    android:gravity="center"
                    android:text="便民服务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_50"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/px_1"
                android:layout_weight="1"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/gv_wyfw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:numColumns="2"
                    android:padding="@dimen/px_10"
                    android:scrollbars="none">

                </GridView>

                <GridView
                    android:id="@+id/gv_bmfw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@color/white"
                    android:numColumns="2"
                    android:padding="@dimen/px_10"
                    android:scrollbars="none">

                </GridView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
