<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_290"
                android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_lnqt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/ll_lnqt_left"
                            android:layout_width="@dimen/px_150"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bfdx_lnqt"/>
                            <TextView
                                android:layout_marginTop="@dimen/px_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="老年群体"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_toRightOf="@+id/ll_lnqt_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/px_20">
                            <TextView
                                android:id="@+id/tv_lnqt_qttd"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="群体特点"
                                android:background="@color/gray"
                                android:padding="@dimen/px_5"/>
                            <TextView
                                android:id="@+id/tv_lnqt_fwxq"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="服务需求"
                                android:layout_marginTop="@dimen/px_10"
                                android:background="@color/gray"
                                android:padding="@dimen/px_5"/>
                            <TextView
                                android:id="@+id/tv_lnqt_tsqt"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="特殊群体"
                                android:layout_marginTop="@dimen/px_10"
                                android:background="@color/gray"
                                android:padding="@dimen/px_5"/>
                        </LinearLayout>
                    </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_znqt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_20">
                    <LinearLayout
                        android:id="@+id/ll_znqt_left"
                        android:layout_width="@dimen/px_150"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bfdx_znqt"/>
                        <TextView
                            android:layout_marginTop="@dimen/px_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="中年群体"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@+id/ll_znqt_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/px_20">
                        <TextView
                            android:id="@+id/tv_znqt_qttd"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="群体特点"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_znqt_fwxq"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="服务需求"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_znqt_tsqt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="特殊群体"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_290"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_qnqt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_qnqt_left"
                        android:layout_width="@dimen/px_150"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bfdx_qnqt"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_marginTop="@dimen/px_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="青年群体"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@+id/ll_qnqt_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/px_20">
                        <TextView
                            android:id="@+id/tv_qnqt_qttd"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="群体特点"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_qnqt_fwxq"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="服务需求"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_qnqt_tsqt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="特殊群体"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_snqt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_snqt_left"
                        android:layout_width="@dimen/px_150"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bfdx_snqt"/>
                        <TextView
                            android:layout_marginTop="@dimen/px_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="少年群体"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@+id/ll_snqt_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/px_20">
                        <TextView
                            android:id="@+id/tv_snqt_qttd"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="群体特点"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_snqt_fwxq"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="服务需求"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_snqt_tsqt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="特殊群体"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_290"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_qtqt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_qtqt_left"
                        android:layout_width="@dimen/px_150"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bfdx_qtqt"/>
                        <TextView
                            android:layout_marginTop="@dimen/px_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="其他群体"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@+id/ll_qtqt_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/px_20">
                        <TextView
                            android:id="@+id/tv_qtqt_qttd"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="群体特点"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_qtqt_fwxq"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="服务需求"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                        <TextView
                            android:id="@+id/tv_qtqt_tsqt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="特殊群体"
                            android:layout_marginTop="@dimen/px_10"
                            android:background="@color/gray"
                            android:padding="@dimen/px_5"/>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="@dimen/px_250"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理员登录"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_20"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/admin"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/et_userName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_60"
                            android:hint="用户名"
                            android:textSize="12sp"/>
                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_60"
                            android:layout_marginTop="@dimen/px_10"
                            android:hint="密码"
                            android:textSize="12sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_60"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <Button
                                android:id="@+id/btn_login"
                                android:layout_width="@dimen/px_150"
                                android:layout_height="match_parent"
                                android:text="登录"/>
                            <Button
                                android:id="@+id/btn_reset"
                                android:layout_width="@dimen/px_150"
                                android:layout_height="match_parent"
                                android:text="重置"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>