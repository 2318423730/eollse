<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bszn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bszn_background"
    tools:context="com.eollse.activity.BsznActivity"
    android:paddingLeft="@dimen/px_30"
    android:paddingRight="@dimen/px_30"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/px_150"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_geren"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bszn_top_text"
                    android:padding="5dp"
                    android:text="个人"
                    android:minWidth="50dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    />


                <TextView
                    android:id="@+id/tv_qiye"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bszn_top_text"
                    android:padding="5dp"
                    android:text="企业"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:minWidth="50dp"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:clickable="false"/>
            </LinearLayout>


            <GridView
                android:id="@+id/gv_bszn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:numColumns="4"></GridView>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
