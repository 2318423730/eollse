<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bszn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_background"
    tools:context="com.eollse.activity.zwfw.SqtjActivity">

    <com.eollse.utils.MyLeftLinearLayout
        android:id="@+id/ll_myLeftLinearLayout"
        android:layout_width="@dimen/px_150"
        android:layout_height="match_parent"
        android:background="@drawable/zcxx_left">

    </com.eollse.utils.MyLeftLinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <include layout="@layout/top"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/px_10"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:background="@drawable/info">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_marginRight="@dimen/px_40"
                    android:layout_marginTop="@dimen/px_40"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_100"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="诉求提交协议"
                            android:textColor="@color/black"
                            android:textSize="@dimen/px_40" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/px_120"
                            android:layout_marginRight="@dimen/px_120"
                            android:background="@color/bule"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/px_100"
                        android:layout_marginRight="@dimen/px_100"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/px_10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/px_30" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_70"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginRight="@dimen/px_40"
                android:gravity="center"
                android:paddingLeft="@dimen/px_200"
                android:paddingRight="@dimen/px_200">

                <Button
                    android:id="@+id/btn_tongyi"
                    android:layout_width="@dimen/px_350"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px_50"

                    android:background="@drawable/sqtj_tongyi"
                    android:text="同意"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_butongyi"
                    android:layout_width="@dimen/px_350"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_50"
                    android:background="@drawable/sqtj_butongyi"
                    android:text="不同意"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
