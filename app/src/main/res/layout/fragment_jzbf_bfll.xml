<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/px_1290"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rg_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:padding="@dimen/px_20"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_zgh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="总工会"
                android:button="@null"
                android:background="@drawable/selector_jzbf_bfll"

                android:gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:paddingRight="@dimen/px_40"
                android:drawableLeft="@drawable/bfll_zgh"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/tqw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="团区委"
                android:button="@null"
                android:background="@drawable/selector_jzbf_bfll"
                android:gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:paddingRight="@dimen/px_40"
                android:drawableLeft="@drawable/bfll_tqw"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/qfl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="区妇联"
                android:button="@null"
                android:background="@drawable/selector_jzbf_bfll"
                android:gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:paddingRight="@dimen/px_40"
                android:drawableLeft="@drawable/bfll_qfl"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/qtbm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="其他部门"
                android:button="@null"
                android:background="@drawable/selector_jzbf_bfll"
                android:gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:paddingRight="@dimen/px_40"
                android:drawableLeft="@drawable/bfll_qtbm"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20">
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>