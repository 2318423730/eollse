<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zwfw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eollse.activity.zwfw.ZwfwActivity">

    <include layout="@layout/top2"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gv_zwfw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_40"
            android:layout_marginLeft="@dimen/px_80"
            android:layout_marginRight="@dimen/px_80"
            android:layout_marginTop="@dimen/px_40"
            android:background="@drawable/zwfw_info_bg"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:numColumns="4">

        </GridView>
    </LinearLayout>

</LinearLayout>
