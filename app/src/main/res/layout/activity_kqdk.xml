<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bszn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_background"
    tools:context="com.eollse.activity.KqdkActivity">

    <LinearLayout
        android:layout_width="@dimen/px_150"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="网格管理"
            android:textColor="@color/white"
            android:textSize="@dimen/px_80" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/info_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <include layout="@layout/top"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginRight="@dimen/px_40"
                android:layout_marginTop="@dimen/px_10"
                android:layout_weight="1"
                android:background="@drawable/shape_white_corners"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/shape_kqda_left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/px_10"
                        android:paddingLeft="@dimen/px_10"
                        android:paddingRight="@dimen/px_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="考勤打卡栏"
                            android:textColor="@color/bule"
                            android:textSize="@dimen/px_50" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_180"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_hour"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/kqdk_time_bg"
                                android:gravity="center"
                                android:text="小时"
                                android:textColor="@color/red"
                                android:textSize="@dimen/px_50" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/red"
                                android:textSize="@dimen/px_80" />

                            <TextView
                                android:id="@+id/tv_min"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/kqdk_time_bg"
                                android:gravity="center"
                                android:text="分钟"
                                android:textColor="@color/red"
                                android:textSize="@dimen/px_50" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/red"
                                android:textSize="@dimen/px_80" />

                            <TextView
                                android:id="@+id/tv_second"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/kqdk_time_bg"
                                android:gravity="center"
                                android:text="秒"
                                android:textColor="@color/red"
                                android:textSize="@dimen/px_50" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_100"
                            android:gravity="center"
                            android:text="年月日"
                            android:textColor="@color/red"
                            android:textSize="@dimen/px_40" />

                        <TextView
                            android:id="@+id/tv_getLoction"
                            android:layout_width="@dimen/px_150"
                            android:layout_height="@dimen/px_70"
                            android:background="@drawable/kqdk_btn_bg"
                            android:gravity="center"
                            android:text="定位:"
                            android:textColor="@color/red"
                            android:textSize="@dimen/px_40" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_100"
                            android:gravity="center_vertical"
                            android:text="定位中..."
                            android:textSize="@dimen/px_35" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_kqda_login"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/px_10"
                            android:paddingRight="@dimen/px_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/px_10"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/px_100"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="姓名:"
                                    android:textSize="@dimen/px_40" />

                                <EditText

                                    android:id="@+id/et_userName"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/px_70"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_white_corners"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px_40" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/px_10"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/px_100"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="工号:"
                                    android:textSize="@dimen/px_40" />

                                <EditText
                                    android:id="@+id/et_usrNum"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/px_70"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_white_corners"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px_40" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/px_10"
                                android:layout_weight="1"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/btn_login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/kqdk_btn_bg"
                                    android:text="登录"
                                    android:textSize="@dimen/px_40" />

                                <Button
                                    android:id="@+id/btn_reset"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/px_60"
                                    android:background="@drawable/kqdk_btn_bg"
                                    android:text="重置"
                                    android:textSize="@dimen/px_40" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_middle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/px_10"
                        android:paddingRight="@dimen/px_10">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_100">

                            <ImageView
                                android:id="@+id/iv_choose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_launcher" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="@dimen/px_10">

                                <ImageView
                                    android:id="@+id/iv_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                </ImageView>
                                <TextView
                                    android:id="@+id/tv_addressNotice"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:text="位置图片"
                                    android:textSize="@dimen/px_30"/>
                            </RelativeLayout>


                            <EditText
                                android:id="@+id/et_kq_content"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/gray"
                                android:hint="请输入考勤备注" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_200"
                            android:layout_marginTop="@dimen/px_10"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_kq_commit"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/kqdk_submit"
                                android:gravity="center"
                                android:text="考勤提交"
                                android:textSize="@dimen/px_40" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="温馨提示:"
                                android:textSize="@dimen/px_30" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/shape_kqda_right"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/px_10"
                    android:paddingLeft="@dimen/px_10"
                    android:paddingRight="@dimen/px_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="请假栏"
                        android:textColor="@color/bule"
                        android:textSize="@dimen/px_50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_300"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/px_10"
                            android:layout_marginTop="@dimen/px_10"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="@dimen/px_130"
                                    android:layout_height="match_parent"
                                    android:text="请假类型:"
                                    android:textSize="@dimen/px_30"
                                    android:gravity="center"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <EditText
                                        android:id="@+id/et_qj_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="选择请假类型"
                                        android:textSize="@dimen/px_30"

                                        android:gravity="center"/>
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/kqdk_to_right"/>
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="@dimen/px_130"
                                    android:layout_height="match_parent"
                                    android:text="审批领导:"
                                    android:textSize="@dimen/px_30"
                                    android:gravity="center"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <EditText
                                        android:id="@+id/et_qj_leader"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="选择审批领导"
                                        android:textSize="@dimen/px_30"

                                        android:gravity="center"/>
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/kqdk_to_right"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="@dimen/px_130"
                                    android:layout_height="match_parent"
                                    android:text="开始时间:"
                                    android:textSize="@dimen/px_30"
                                    android:gravity="center"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <EditText
                                        android:id="@+id/et_qj_startTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="选择开始时间"
                                        android:textSize="@dimen/px_30"

                                        android:gravity="center"/>
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/kqdk_to_right"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="@dimen/px_130"
                                    android:layout_height="match_parent"
                                    android:text="结束时间:"
                                    android:textSize="@dimen/px_30"
                                    android:gravity="center"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <EditText
                                        android:id="@+id/et_qj_endTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="选择结束时间"
                                        android:textSize="@dimen/px_30"

                                        android:gravity="center"/>
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/kqdk_to_right"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详情内容:"
                            android:textSize="@dimen/px_40" />

                        <EditText
                            android:id="@+id/et_qj_content"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/px_10"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:hint="详情" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_10"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_qj_commit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/kqdk_submit"
                                android:gravity="center"
                                android:text="请假提交"
                                android:textSize="@dimen/px_40" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
